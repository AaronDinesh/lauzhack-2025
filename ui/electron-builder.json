{
  "appId": "com.mx.repair.desktop",
  "productName": "MX Repair Desktop",
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "assets/icon.png"
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "assets/icon.png"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Utility",
    "icon": "assets/icon.png"
  }
}

