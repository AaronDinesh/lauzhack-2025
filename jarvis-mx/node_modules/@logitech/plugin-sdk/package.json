{
  "name": "@logitech/plugin-sdk",
  "version": "0.1.0",
  "description": "Plugin SDK for developing plugins for Logitech devices",
  "main": "dist/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@swc/core": "^1.13.3",
    "@types/jest": "^30.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jest": "^30.0.0",
    "lefthook": "^1.11.16",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "clean": "node -e \"const fs=require('fs'); fs.rmSync('dist', {recursive:true, force:true});\"",
    "build": "tsup-node",
    "build:docs": "typedoc",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:direct": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "logitech",
    "plugins",
    "sdk"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "author": "Logitech",
  "license": "MIT",
  "volta": {
    "node": "22.17.0"
  }
}