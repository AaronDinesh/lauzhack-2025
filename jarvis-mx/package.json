{
  "name": "jarvis-mx",
  "version": "0.1.0",
  "description": "A plugin created with the Logi Plugin SDK",
  "main": "./dist/index.mjs",
  "type": "module",
  "scripts": {
    "build": "npm run clean && node esbuild.config.js",
    "build:pack": "npm run build:prod && npm run pack",
    "build:prod": "npm run clean && cross-env NODE_ENV=production node esbuild.config.js",
    "clean": "rimraf dist",
    "pack": "logitoolkit pack",
    "link": "logitoolkit link",
    "unlink": "logitoolkit unlink",
    "watch": "npm run clean && node esbuild.config.js --watch"
  },
  "author": "Your Name",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@logitech/plugin-sdk": "0.1.0"
  },
  "devDependencies": {
    "@logitech/plugin-toolkit": "0.1.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.10",
    "rimraf": "^6.0.1",
    "yaml": "^2.8.1"
  }
}
